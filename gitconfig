[core]
	pager = less -R
[user]
	email = philip.taffner@bluegfx.de
	name = Philip Taffner
[alias]
	st = status -sb
	ci = commit
	co = checkout
	br = branch
	rb = rebase
	d = diff --word-diff
	dc = diff --cached
	sl = stash list
	sp = stash pop
	unstage = reset HEAD --
	last = log -1 HEAD
	aliases = "!git config -l | grep alias | cut -c 7-"
	ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --date=short
	ll = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat --date=short
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
